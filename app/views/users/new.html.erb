<%= render 'shared/errors', obj: @user%>

<h1 align="center">Signup for AlphaBlog </h1>

<div class="row">
	<div class="col-md-12">
		<%= form_for @user do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :username %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
				</div>
			</div>
				<br>
				<br>
			<div class="form-group">
				<div class="control-label col-sm-2">
				<%= f.label :email %><br>
				</div>
				<div class="col-sm-8">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %><br>
				</div>
			</div>
			<br>
			<br>
			<div class="form-group">
				<div class="control-label col-sm-2">
				<%= f.label :password %><br>
				</div>
				<div class="col-sm-8">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %><br>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Signup", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>

		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Back to Articles Listing", articles_path %> ]
		</div>

	</div>
</div>